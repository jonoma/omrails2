<div class="container">

	<p>
	  <strong>User:</strong>
	  <%= @list.user.email %>
	</p>

	<p>
	  <strong>Title:</strong>
	  <%= @list.title %>
	</p>

	<table class="table">
	  <thead class="thead-dark">
	    <tr>
	      <th>URL</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @list.articles.each do |article| %>
	      <tr>
	        <% if article.user == current_user %>
	        	<td><%= article.url %></td>
	        	<td><%= link_to 'Show', article %></td>
	          <td><%= link_to 'Edit', edit_article_path(article) %></td>
	          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	        <% end %>
	      </tr>
	    <% end %>
	    	<tr>
	    		<td><%= render 'form', list: @list %></td>
	    	</tr>
	  </tbody>
	</table>

	<br>

	<% if user_signed_in? %>
	  <%= link_to 'Edit', edit_list_path(@list) %> |
	  <%= link_to 'Back', lists_path %>
	<% end %>

</div>
