<div class="container">

	<br>

	<h1><%= @list.title %></h1>

	<table class="table table-borderless">

	  <tbody>
	    <% @list.articles.each do |article| %>
	      <% if article.user == current_user %>
	      	<tr>
	      		<td><b><%= article.title %></b></td>
	        	<td><%= article.site_name %></td>
        	</tr>
	      	<tr>	        
	        	<td><%= article.description %></td>
        	</tr>
        	<tr>
	        	<td><a href="<%= article.url %>">Read More</a></td>
	          <td><%= link_to 'Delete', article, :list_id => params[:id], method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      	</tr>
	      <% end %>
	    <% end %>
    	<tr>
    		<td><%= render 'form', list: @list %></td>
    	</tr>
	  </tbody>
	</table>

	<br>

	<% if user_signed_in? %>
	  <%= link_to 'Edit', edit_list_path(@list) %> |
	  <%= link_to 'Back', lists_path %>
	<% end %>

</div>
